                <label asp-for="Empleado" class="control-label"></label>
                <input asp-for="Empleado" class="form-control" />
                <span asp-validation-for="Empleado" class="text-danger"></span>
            </div>        
            <div class="form-group">

                <ol class="breadcrumb">
                <li class="breadcrumb-item"><input class="btn btn-primary" type="submit" value="Guardar   "/></li>
                <li class="breadcrumb-item"><a class="btn btn-secondary" asp-action="Index">Regresar  </a></li>

                </ol>
            </div>  
