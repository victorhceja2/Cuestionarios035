<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cuestionarios 035</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min 2.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcMovie.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">C035</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                <a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
                <span class="visually-hidden">(current)</span>
                </li>    
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Cuestionarios</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-area="" asp-controller="CuesH" asp-action="">Encabezado</a>
                    <a class="dropdown-item" asp-area="" asp-controller="CuesD" asp-action="">Detalle</a>
                </div>
                </li> 
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Procesos</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-area="" asp-controller="Campana" asp-action="">Campaña</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Proceso2" asp-action="">Proceso</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="" asp-controller="ProcesoFormulario" asp-action="">Formularios</a>
                </div>                                              

                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Panel Administrativo</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Estadisticas</a>
                    <a class="dropdown-item" href="#">Permisos</a>
                    <a class="dropdown-item" href="#">Correos</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="">Usuarios</a>
                </div>
                </li>

                <li class="nav-item">
                <a class="nav-link" href="http://035.com.mx:8010/">Tienda</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="" asp-action="">Soporte</a>
                </li>  
                <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="" asp-action="">Acerca</a>
                </li>        


                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Registro</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="Create2">Registrarse</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Create">Login</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Index">Registros</a>
                </div>
                </li>               

            </ul>
            <form class="d-flex">
                <input class="form-control me-sm-2" type="text" placeholder="Texto...">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Buscar</button>
            </form>
            </div>
        </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Cuestionarios 035 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
